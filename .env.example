# TUMA TAXI - MOZAMBIQUE EDITION
# Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================================================
# DATABASE (Supabase PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/tumataxi"

# ============================================================================
# SUPABASE (Auth + Storage)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"  # For seed script only

# ============================================================================
# NEXTAUTH (Optional - for authentication)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here_generate_with_openssl"

# ============================================================================
# PAYMENT GATEWAY (for MZN transactions)
# ============================================================================
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key_here"
STRIPE_PUBLIC_KEY="pk_live_your_stripe_public_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# ============================================================================
# SMS/NOTIFICATIONS (Optional)
# ============================================================================
TWILIO_ACCOUNT_SID="ACyour_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================================================
# CURRENCY & TIMEZONE (Mozambique)
# ============================================================================
NEXT_PUBLIC_TIMEZONE="Africa/Maputo"
NEXT_PUBLIC_LOCALE="pt-MZ"
NEXT_PUBLIC_CURRENCY="MZN"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_SOS="true"
NEXT_PUBLIC_ENABLE_INSTANT_PAYOUT="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL="info"
SENTRY_DSN=""

# ============================================================================
# API RATE LIMITING
# ============================================================================
API_RATE_LIMIT="100"
API_RATE_WINDOW_MS="900000"
